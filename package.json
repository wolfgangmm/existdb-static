{
	"name": "eXistdb-static",
	"version": "1.0.0",
	"description": "Static site for eXistdb",
	"type": "module",
	"scripts": {
		"build": "npm run build:css && npx @11ty/eleventy",
		"build:css": "sass sass/main.scss:public/css/main.css --style=compressed",
		"build-nocolor": "npm run build:css && cross-env NODE_DISABLE_COLORS=1 npx @11ty/eleventy",
		"build-ghpages": "npm run build:css && npx @11ty/eleventy --pathprefix=/eleventy-base-blog/",
		"start": "npm run build:css && npx @11ty/eleventy --serve --quiet",
		"start-ghpages": "npm run build:css && npx @11ty/eleventy --pathprefix=/eleventy-base-blog/ --serve --quiet",
		"debug": "npm run build:css && cross-env DEBUG=Eleventy* npx @11ty/eleventy",
		"debugstart": "npm run build:css && cross-env DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
		"benchmark": "cross-env DEBUG=Eleventy:Benchmark* npx @11ty/eleventy"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/11ty/eleventy-base-blog.git"
	},
	"author": {
		"name": "eXistdb",
		"email": "info@exist-db.org",
		"url": "https://exist-db.org/"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^1.0.4",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
		"cross-env": "^7.0.3",
		"luxon": "^3.6.1",
		"prismjs": "^1.30.0",
		"sass": "^1.89.2",
		"zod": "^3.25.67",
		"zod-validation-error": "^3.5.2"
	},
	"dependencies": {
		"eleventy-plugin-toc": "^1.1.5",
		"markdown-it-anchor": "^9.2.0",
		"sharp": "^0.34.2"
	}
}
